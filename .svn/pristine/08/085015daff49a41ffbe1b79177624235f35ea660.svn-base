package com.guitu18.mapping;

import java.lang.reflect.Method;
import java.util.Map;
import java.util.concurrent.ConcurrentHashMap;

/**
 * GTHandlerMethodMapping
 *
 * @author zhangkuan
 * @date 2019/8/19
 */
public class GTHandlerMethodMapping {

    private static Map<String, Method> methodMapping = new ConcurrentHashMap<String, Method>();

    public static Method getMethod(String mapping) {
        Method method = methodMapping.get(mapping);
        if (method == null) {
            throw new RuntimeException("MethodMapping is not fond :" + mapping);
        }
        return method;
    }

    public static void addMapping(String mapping, Method method) {
        methodMapping.put(mapping, method);
    }

}
