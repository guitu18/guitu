package com.guitu18.controller;

import com.guitu18.annonation.RequestMapping;
import com.guitu18.common.JsonResult;
import com.guitu18.entity.User;
import org.apache.log4j.Logger;


/**
 * IndexController
 *
 * @author zhangkuan
 * @date 2019/8/19
 */
@RequestMapping
public class IndexController {

    private Logger log = Logger.getLogger(this.getClass());

    @RequestMapping
    public JsonResult index() {
        log.info(">>>>>>>>>>>>>>> IndexController.index() >>>>>>>>>>>>>>>");
        return JsonResult.ok();
    }

    @RequestMapping("register")
    public JsonResult register(String username, String password) {
        log.info(">>>>>>>>>>>>>>> IndexController.register() >>>>>>>>>>>>>>>");
        log.info("username = " + username);
        log.info("password = " + password);
        return JsonResult.ok("注册成功", new User(username, password));
    }

    @RequestMapping("login")
    public JsonResult login(String username, String password) {
        log.info(">>>>>>>>>>>>>>> IndexController.login() >>>>>>>>>>>>>>>");
        log.info("username = " + username);
        log.info("password = " + password);
        return JsonResult.ok("登录成功", new User(username, password));
    }

}
