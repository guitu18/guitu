package com.guitu18.beans;

import com.guitu18.reflect.ClassScanner;
import org.apache.log4j.Logger;

import java.util.Set;

/**
 * GTBeanManager
 *
 * @author zhangkuan
 * @date 2019/8/19
 */
public class GTBeanManager {

    private Logger log = Logger.getLogger(this.getClass());

    private static GTBeanManager beanManager;

    private GTBeanManager() {
    }

    public static GTBeanManager getInstance() {
        if (beanManager == null) {
            synchronized (GTBeanManager.class) {
                if (beanManager == null) {
                    beanManager = new GTBeanManager();
                }
            }
        }
        return beanManager;
    }

    public void initBean(String packageName) throws IllegalAccessException, InstantiationException {
        Set<Class> classes = ClassScanner.getClasses(packageName);
        for (Class clazz : classes) {
            GTIoc.register(clazz.newInstance());
        }
    }


}
